<div class="ui center aligned loading {{#if fullscreenEnabled}}basic{{/if}} segment">
    <div class="ui top attached progress">
        <div class="bar"></div>
    </div>
    <div class="ui right floated horizontal list">
        <div class="ui inline options dropdown item">
            <i class="angle down icon"></i>
            <div class="menu">
                <a class="item" data-graph="{{index}}" href="" name="add-line" title="Add line">
                    Add line
                </a>
                <div class="divider"></div>
                <a class="item" href="" name="edit-graph">Edit graph</a>
                {{#if isMultiMode}}
                    <a class="item" data-graph="{{index}}" href="" name="remove-graph">Delete graph</a>
					<div class="divider"></div>
	                <a class="item" data-graph="{{index}}" href="" name="fullscreen-graph">Fullscreen</a>
                {{/if}}
            </div>
        </div>
    </div>
    <div id="container{{index}}"></div>
    <div class="ui accordion">
        <div class="title" style="padding:0"></div>
        <div class="content">
            <form class="ui form">
                <table class="ui very basic very compact left aligned small table">
                    <thead>
                    <tr>
                        <th>Statistic</th>
                        <th>Environment</th>
                        <th>Search</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each histories}}
                        <input data-graph="{{../index}}" type="hidden" name="lines">
                        <tr>
                            <td>
                                <div class="ui graph {{#unless filters.metrics}}disabled{{/unless}} dropdown">
                                    <input type="hidden" value="{{history.settings.group}},{{history.settings.metric}},{{history.settings.selector}}">
                                    <div class="text">{{history._title}}</div>
                                    <i class="angle down icon"></i>
                                    <div class="menu">
                                        <div class="ui icon search input">
                                            <i class="search icon"></i>
                                            <input placeholder="Search groups...">
                                        </div>
                                        <div class="divider"></div>
                                        {{#each filters.metrics}}
                                            <div class="item">
                                                <i class="dropdown icon"></i>
                                                <span class="text">{{#if group}}{{group}}{{else}}Global{{/if}}</span>
                                                <div class="menu">
                                                    {{#each _metrics}}
                                                        <div class="item" data-text="{{#if ../group}}{{../group}}{{else}}Global{{/if}} {{label}}" data-value="{{../group}},{{metric}},{{selector}}">
                                                            {{label}}
                                                        </div>
                                                    {{/each}}
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="ui graph {{#unless filters.envs}}disabled{{/unless}} dropdown">
                                    <input type="hidden" value="{{history.settings.env}}">
                                    <div class="text">{{history.settings.env}}</div>
                                    <i class="angle down icon"></i>
                                    <div class="menu">
                                        {{#each filters.envs}}
                                            <div class="item" data-value="{{this}}">{{this}}</div>
                                        {{/each}}
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="ui graph dropdown">
                                    <input type="hidden" value="{{history.settings._search_name}}">
                                    <div class="text">{{history.settings.search_name}}</div>
                                    <i class="angle down icon"></i>
                                    <div class="menu">
                                        {{#each filters.searches}}
                                            <div class="item" data-value="{{_text}}">{{name}}</div>
                                        {{/each}}
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a data-graph="{{../index}}" data-index="{{@index}}" href="" name="remove" title="Remove line">
                                    <i class="ui minus square outline icon"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>
